{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
    <h2>List Products</h2>
    <a class="float-right text-white" href="/prueba/public/product/new" class="btn btn-dark"><button type="button" class="btn btn-info">New Productos</button></a>
    <table id="products" class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">code</th>
      <th scope="col">brand</th>
      <th scope="col">price</th>
      <th scope="col">action</th>
    </tr>
  </thead>
  <tbody>
    {% for product in products %}
        <tr>
        <th scope="row">{{ product.id }}</th>
        <td>{{ product.name }}</td>
        <td>{{ product.code }}</td>
        <td>{{ product.brand }}</td>
        <td>{{ product.price }}</td>
        <td>
        <a href="/prueba/public/product/show/{{ product.id }}" class="btn btn-dark">Show</a>
        <a href="/prueba/public/product/edit/{{ product.id }}" class="btn btn-light">Edit</a>
        <a hreft="#"  class="btn btn-danger delete-product" data-id="{{ product.id }}">Delete</a></td>
        </tr>
    {% endfor %}
    
  </tbody>
</table>
    
{% endblock %}

{% block javascripts %}
  <script src="{{asset('delete.js')}}"></script>
{% endblock %}